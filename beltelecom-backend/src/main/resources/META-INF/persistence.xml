<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="microservices">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>net.btc.microservices.entities.Tariff</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://postgres:5432/postgres" /> <!-- BD Mane -->
      <property name="jakarta.persistence.jdbc.user" value="postgres" /> <!-- DB User -->
      <property name="jakarta.persistence.jdbc.password" value="postgres" /> <!-- DB Password -->

      <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- create / create-drop / update -->

      <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
      <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
    </properties>
  </persistence-unit>
</persistence>
